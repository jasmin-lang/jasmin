  while (i < N) {
    ms = #update_msf(i < N, ms);
    t1 = msg[(int) i];
    t2 = key[(int) i];
    t1 ^= t2;
    msg[(int) i] = t1;
    i += 1;
  }
  ms = #update_msf(!(i < N), ms);
