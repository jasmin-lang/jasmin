#[sct = "
  { ptr: transient, val: secret } * { ptr: transient, val: transient } * transient -> public * { ptr: public, val: secret }
"]
fn fig6a(
  reg mut ptr u64[N] s,
  reg const ptr u64[N] p,
  reg u64 i pub_v
) -> reg u64, reg mut ptr u64[N] {
  reg u64 ms x;
  reg bool b;
  ms = #init_msf();
  b = i < N;
  if b {
    ms = #update_msf(b, ms);
    s[(int) i] = pub_v;
  } else {
    ms = #update_msf(!b, ms);
  }
  x = p[5];
  return x, s;
}

#[sct = "
  { ptr: transient, val: secret } * { ptr: transient, val: transient } * transient * secret -> public * { ptr: public, val: secret }
"]
fn fig6b(
  reg mut ptr u64[N] s,
  reg const ptr u64[N] p,
  reg u64 cond,
  reg u64 sec_v
) -> reg u64, reg mut ptr u64[N] {
  reg u64 ms x;
  reg bool b;
  ms = #init_msf();
  b = cond != 0;
  if b {
    ms = #update_msf(b, ms);
    s[3] = sec_v;
  } else {
    ms = #update_msf(!b, ms);
  }
  x = p[5];
  return x, s;
}
