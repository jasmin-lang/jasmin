}

#[sct = "
  { ptr: public, val: { normal: d, speculative: secret } } -> { normal: d, speculative: d }
"]
fn fig5a(
  reg const ptr u64[N] p
) -> reg u64 {
  reg u64 i s t;
  s = 0;
  i = 0;
  while (i < N) {
    t = p[i];
    s += t;
    i += 1;
  }
  return s;
}

#[sct = "
  { ptr: transient, val: d } -> d
"]
fn fig5b(reg const ptr u64[N] p) -> reg u64 {
  reg u64 ms i s t;
  ms = #init_msf();
  s = 0;
  i = 0;
  while (i < N) {
    ms = #update_msf(i < N, ms);
    t = p[(int) i];
    t = #protect(t, ms);
    s += t;
    i += 1;
  }
  ms = #update_msf(!(i < N), ms);
  return s;
}

#[sct = "
  { ptr: transient, val: d } -> d
"]
fn fig5c(reg const ptr u64[N] p) -> reg u64 {
  reg u64 ms i s t;
  ms = #init_msf();
  s = 0;
  i = 0;
  while (i < N) {
    ms = #update_msf(i < N, ms);
    t = p[(int) i];
    s += t;
    i += 1;
  }
  ms = #update_msf(!(i < N), ms);
  s = #protect(s, ms);
  return s;
}

