export
fn test_zeroext (reg u8 a) -> reg u32 {

reg u16 b;
reg u32 c, d;
reg u64 e, f, g;

b = (16u) a;
c = (32u) a;
d = (32u) b;
e = (64u) a;
f = (64u) b;
g = (64u) c;

f += e;
g += f;

d += g;

return d;
}

export
fn test_signext(reg u8 a) -> reg u32 {
reg u16 b;
reg u32 c, d;
reg u64 e, f, g;

b = (16s) a;
c = (32s) a;
d = (32s) b;

e = (64s) a;
f = (64s) b;
g = (64s) c;

f += e;
g += f;

d += g;

return d;
}

export
fn test_u128(reg u64 ptr_, reg u64 v, reg u32 w) {
reg u128 x, y;

x = #MOVD(v);
y = #MOVD_32(w);

x ^= y;

y = #VMOV(v);
x ^= y;
y = #VMOV_32(w);
x ^= y;
(u128)[ptr_ + 0] = x;
}

export
fn test_imm(reg u64 p) {
inline u8 a;
inline u16 b;
inline u32 c;
reg u64 d;
a = 0xFF;
b = (16s) a;
c = (32s) b;
d = (64s) c;
[p + 0] = d;

a = 0xFF;
b = (16u) a;
c = (32u) b;
d = (64u) c;
[p + 8] = d;
}
