// * Implementation of montgomery ladder for curve25519

param int rem_p = 2; /* 2^(4*64) mod p      */

// ** addition
// ************************************************************************

fn add(reg u64[4] x, stack u64[4] ya) -> reg u64[4] {

  reg u64[4] y;
  reg u64 add0;
  reg u64 add1;
  reg bool cf;
  inline int i;

  for i in (0..4) {
    y[i] = ya[i];
    if   (i == 0) { cf, x[0] += y[0]; }
    else         { cf, x[i] += y[i] + cf; }
  }

  add0 = 0;
  add1 = rem_p;
  add1 = add0 if !cf;

  for i in (0..4) {
    if (i == 0) {
      cf, x[0] += add1;
    } else {
      cf, x[i] += add0 + cf;
    }
  }

  add0 = add1 if cf;
  x[0] += add0;

  return x;
}

